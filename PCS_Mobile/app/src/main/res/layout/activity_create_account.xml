<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header avec logo et texte -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/urbankey_green_light"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:text="@string/urbankey"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <!-- Texte d'inscription -->
            <TextView
                android:id="@+id/connexionUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/inscription"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="18sp" />

            <!-- Champ pour le nom -->
            <EditText
                android:id="@+id/nomInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:background="@drawable/red_rounded_border"
                android:hint="@string/nom"
                android:minHeight="48dp"
                android:singleLine="true"
                android:padding="10dp"
                android:textColor="@color/white" />

            <!-- Champ pour le prénom -->
            <EditText
                android:id="@+id/prenomInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:background="@drawable/red_rounded_border"
                android:hint="@string/prenom"
                android:minHeight="48dp"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white" />

            <!-- Champ pour l'e-mail -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:inputType="textEmailAddress"
                android:background="@drawable/red_rounded_border"
                android:hint="@string/entrez_votre_identifiant"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/white" />

            <!-- Champ pour le mot de passe -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:background="@drawable/red_rounded_border"
                android:hint="@string/entrez_votre_mot_de_passe"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:singleLine="true"
                android:padding="10dp" />

            <!-- Champ pour l'adresse -->
            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:background="@drawable/red_rounded_border"
                android:hint="@string/adresse_input"
                android:inputType="text"
                android:minHeight="48dp"
                android:maxLength="5"
                android:padding="10dp" />

            <!-- Champ pour le code postal -->
            <EditText
                android:id="@+id/zip_codeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:autofillHints=""
                android:background="@drawable/red_rounded_border"
                android:hint="@string/code_postal"
                android:inputType="number"
                android:minHeight="48dp"
                android:maxLength="5"
                android:padding="10dp" />


            <!-- Label pour la date -->
            <TextView
                android:id="@+id/dateInputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="50dp"
                android:textSize="18sp"
                android:text="@string/date_anniversaire"
                android:textColor="@color/urbankey_gray" />

            <!-- DatePicker -->
            <DatePicker
                android:id="@+id/dateInput"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <!-- Bouton pour l'inscription -->
            <Button
                android:id="@+id/btn_inscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:gravity="center"
                android:backgroundTint="@color/urbankey_green_light"
                android:text="@string/inscription"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <!-- Texte pour l'accès à un compte existant -->
            <TextView
                android:id="@+id/connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/vous_avez_un_compte"
                android:textColor="@color/urbankey_green_light"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
